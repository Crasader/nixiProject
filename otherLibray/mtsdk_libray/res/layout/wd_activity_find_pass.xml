<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/wd_bg_dialog_shape_corner">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/wd_dialog_padding">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/wd_iv_pass_find_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wd_ic_account_back"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="找回密码"
                        android:textSize="@dimen/wd_text_size_20"
                        android:layout_gravity="center"
                        android:textColor="@color/wd_color_blue"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                />

                <ImageView
                        android:id="@+id/wd_iv_pass_find_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wd_ic_account_close"
                        android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/wd_bg_edit_shape_corner"
                    android:layout_marginTop="@dimen/wd_margin_15">

                <ImageView
                        android:layout_width="30dip"
                        android:layout_height="40dip"
                        android:scaleType="center"
                        android:src="@drawable/wd_ic_account_username"
                        android:visibility="visible"
                        android:layout_marginLeft="8dp"/>

                <EditText
                        android:id="@+id/wd_et_pass_find_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入用户名"
                        android:maxLength="20"
                        android:paddingBottom="8dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:textSize="@dimen/wd_text_size_16">
                </EditText>

                <ImageView
                        android:id="@+id/wd_iv_pass_find_clean"
                        android:layout_width="30dip"
                        android:layout_height="40dip"
                        android:scaleType="center"
                        android:src="@drawable/wd_ic_account_edit_clear_selector"
                        android:visibility="invisible"
                />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/wd_bg_edit_shape_corner"
                    android:layout_marginTop="10dp">

                <ImageView
                        android:layout_width="30dip"
                        android:layout_height="40dip"
                        android:scaleType="center"
                        android:src="@drawable/wd_ic_account_phone"
                        android:visibility="visible"
                        android:layout_marginLeft="8dp"
                />
                <EditText
                        android:id="@+id/wd_et_pass_find_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入手机号"
                        android:maxLength="20"
                        android:paddingBottom="8dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:textSize="@dimen/wd_text_size_16">
                </EditText>

                <ImageView
                        android:layout_width="30dip"
                        android:layout_height="40dip"
                        android:scaleType="center"
                        android:src="@drawable/wd_ic_account_edit_clear_selector"
                        android:visibility="invisible"
                />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
            >

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/wd_bg_edit_shape_corner"
                        android:layout_weight="0.7"
                >

                    <ImageView
                            android:layout_width="30dip"
                            android:layout_height="40dip"
                            android:scaleType="center"
                            android:src="@drawable/wd_ic_account_message"
                            android:visibility="visible"
                            android:layout_marginLeft="8dp"
                    />

                    <EditText
                            android:id="@+id/wd_et_pass_find_validate"
                            android:layout_weight="0.2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="输入验证码"
                            android:inputType="text"
                            android:maxLength="20"
                            android:paddingBottom="8dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:background="@null"
                            android:textSize="@dimen/wd_text_size_16"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/wd_iv_pass_find_validate"
                        android:layout_width="40dp"
                        android:layout_height="38dp"
                        android:layout_weight="0.2"
                        android:text="获取验证码"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/wd_color_white"
                        android:background="@drawable/wd_bg_validate_shape_normal"
                />

                <ImageView
                        android:id="@+id/wd_iv_pass_find_validate_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:src="@drawable/wd_ic_account_refresh"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="15dip"
                    android:gravity="center"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/wd_btn_pass_find"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/wd_bg_account_btn_blue_selector"
                        android:text="下一步"
                        android:textColor="@color/wd_color_white"
                        android:gravity="center"
                        android:textSize="@dimen/wd_text_size_18"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>