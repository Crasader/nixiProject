<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wd_title_h"
    android:background="@color/wd_color_blue" >

    <!-- 左边 -->
    <LinearLayout
            android:id="@+id/wd_ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/wd_iv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wd_ic_title_back"
                android:layout_margin="15dp"
                />

    </LinearLayout>

    <!-- 中间 -->
    <LinearLayout
            android:id="@+id/wd_ll_title_center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/wd_tv_title_center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:maxLength="16"
                android:text="支付中心"
                android:textColor="@color/wd_color_white"
                android:textSize="@dimen/wd_text_size_20"
                android:gravity="center_vertical"
                />

    </LinearLayout>

    <!-- 右边 -->
    <RelativeLayout
            android:id="@+id/wd_ll_title_right"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            >

        <ImageView
                android:id="@+id/wd_iv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

    </RelativeLayout>


</RelativeLayout>