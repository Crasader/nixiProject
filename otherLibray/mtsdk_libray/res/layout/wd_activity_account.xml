<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_gravity="center">

    <include
            android:id="@+id/wd_account_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/wd_activity_login"
            android:visibility="visible"/>

    <include
            android:id="@+id/wd_account_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/wd_activity_register"
            android:visibility="gone" />

    <include
            android:id="@+id/wd_account_quick_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/wd_activity_quick_register"
            android:visibility="gone" />

</LinearLayout>
