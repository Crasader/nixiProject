            android:paddingTop="@dimen/wd_wh_20"
            android:paddingBottom="@dimen/wd_wh_20">


        <TextView
                android:id="@+id/wd_tv_tip_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
